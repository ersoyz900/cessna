@page "/yolcu/delete/{id:int}"
@rendermode InteractiveServer

@using cessna.web.Models
@using Microsoft.EntityFrameworkCore
@inject CessnasContext Db
@inject NavigationManager Nav

<h3>Delete Passenger</h3>

@if (!string.IsNullOrEmpty(Hata))
{
    <div class="alert alert-danger">@Hata</div>
}

@if (Model == null)
{
    <p>Loading...</p>
}
else
{
    <p>
        Yolcu <strong>@Model.AdSoyad</strong> silinsin mi?
    </p>

    <button class="btn btn-danger" @onclick="ConfirmDelete">Delete</button>
    <a class="btn btn-secondary ms-2" href="/yolcu">Cancel</a>
}

@code {
    [Parameter] public int id { get; set; }

    Yolcu? Model;
    string? Hata;

    protected override async Task OnInitializedAsync()
    {
        Model = await Db.Set<Yolcu>()
                        .FirstOrDefaultAsync(x => x.YolcuKod == id);
    }

    async Task ConfirmDelete()
    {
        if (Model == null) return;

        try
        {
            Db.Set<Yolcu>().Remove(Model);
            await Db.SaveChangesAsync();
            Nav.NavigateTo("/yolcu", forceLoad: true);
        }
        catch
        {
            Hata = "Bu yolcu rezervasyonlara bağlı olduğu için silinemiyor.";
        }
    }
}
