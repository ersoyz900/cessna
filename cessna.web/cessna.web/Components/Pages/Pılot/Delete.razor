@page "/pilot/delete/{id:int}"
@rendermode InteractiveServer

@using cessna.web.Models
@using Microsoft.EntityFrameworkCore
@inject CessnasContext Db
@inject NavigationManager Nav

<h3>Delete Pilot</h3>

@if (!string.IsNullOrEmpty(Hata))
{
    <div class="alert alert-danger">@Hata</div>
}

@if (Model == null)
{
    <p>Loading...</p>
}
else
{
    <p>
        Delete pilot
        <strong>@Model.AdSoyad</strong>?
    </p>

    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete">
        Delete
    </button>

    <a class="btn btn-secondary ms-2" href="/pilot">Cancel</a>
}

@code {
    [Parameter] public int id { get; set; }

    Pilot? Model;
    string? Hata;

    protected override async Task OnInitializedAsync()
    {
        Model = await Db.Set<Pilot>()
                        .FirstOrDefaultAsync(x => x.PilotKod == id);
    }

    async Task ConfirmDelete()
    {
        if (Model == null) return;

        try
        {
            Db.Set<Pilot>().Remove(Model);
            await Db.SaveChangesAsync();
            Nav.NavigateTo("/pilot", forceLoad: true);
        }
        catch
        {
            Hata = "This pilot cannot be deleted because it is used in flights.";
        }
    }
}
