@page "/havalimani/edit/{id:int}"
@rendermode InteractiveServer

@using cessna.web.Models
@using Microsoft.EntityFrameworkCore
@inject CessnasContext Db
@inject NavigationManager Nav

<h3>Edit Airport</h3>

@if (!string.IsNullOrEmpty(Hata))
{
    <div class="alert alert-danger">@Hata</div>
}

@if (Model == null)
{
    <p>Loading...</p>
}
else
{
    <div class="mb-2">
        <label>IATA Kodu *</label>
        <input class="form-control" @bind="Model.IATAKodu" />
    </div>

    <div class="mb-2">
        <label>Ad *</label>
        <input class="form-control" @bind="Model.Ad" />
    </div>

    <div class="mb-2">
        <label>Şehir</label>
        <input class="form-control" @bind="Model.Sehir" />
    </div>

    <div class="mb-2">
        <label>Ülke</label>
        <input class="form-control" @bind="Model.Ulke" />
    </div>

    <button type="button" class="btn btn-primary" @onclick="Save">Save</button>
    <a class="btn btn-secondary ms-2" href="/havalimani">Cancel</a>
}

@code {
    [Parameter] public int id { get; set; }

    Havalimani? Model;
    string? Hata;

    protected override async Task OnInitializedAsync()
    {
        Model = await Db.Set<Havalimani>()
                        .FirstOrDefaultAsync(x => x.HavalimaniKod == id);

        if (Model == null)
            Hata = "Airport not found.";
    }

    void Save()
    {
        if (Model == null) return;

        if (string.IsNullOrWhiteSpace(Model.IATAKodu) ||
            string.IsNullOrWhiteSpace(Model.Ad))
        {
            Hata = "IATA Kodu ve Ad zorunludur.";
            return;
        }

        Db.SaveChanges();
        Nav.NavigateTo("/havalimani", forceLoad: true);
    }
}
